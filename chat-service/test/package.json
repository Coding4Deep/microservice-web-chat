{
  "name": "chat-service-tests",
  "version": "1.0.0",
  "description": "Test suite for chat service",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "jest": "^29.0.0",
    "supertest": "^6.3.0",
    "socket.io-client": "^4.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "../server.js",
      "!node_modules/**"
    ],
    "testMatch": [
      "**/*.test.js"
    ]
  }
}
